            crossorigin="anonymous"></script>

            <script>
                    $(document).ready(() => {
                        $('#logo').mouseenter(function(){
                            $(this).animate({
                                width: "90%",
                            }, 'slow');
                            $('a').append('<span>Entre Agora <i class="fas fa-sign-in-alt mx-2"> !!!</i></span>');
                            $('a').css({
                                'text-decoration': 'none',
                                'font-size': '1.5em',
                                'text-transform': 'uppercase',
                                'color': '#ffffff',
                                'outline': 'none'
                            });
                        });

                        $('#logo').mouseleave(function(){
                            $(this).animate({
                                width: "100%",
                            }, 'slow');
                            $('a span').remove();
                        });
                    });
            </script>
    </body>
</html>