    <body style="background-color: #1B9CFC">
        <main class="container py-5">
            <article>
                <section class="row justify-content-center mt-5">
                    <div class="col-md-7">
                        <!--col-->
                        <header class="text-center my-5 bg-transparent">   
                            <a href="/compiler"><img id="logo" src="img/boss.png" alt="ChefÃ£o" class="img-fluid rounded mx-auto d-block"></a>
                        </header>
                    </div>
                    <!--fim col-->
                </section>
            </article>
